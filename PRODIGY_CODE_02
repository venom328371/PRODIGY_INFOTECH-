import pandas as pd
import matplotlib.pyplot as plt

# 1. Load the dataset
file_path = "API_SP.POP.TOTL_DS2_en_csv_v2_38144.csv"
data = pd.read_csv(file_path, skiprows=4)

# 2. Select "World" population data
world_data = data[data['Country Name'] == 'World'].iloc[:, 4:-1].T
world_data.columns = ['Population']
world_data.index = world_data.index.astype(int)  # Convert year to int


# ðŸ“Š A. Bar Chart: Population by Year

plt.figure(figsize=(12, 6))
plt.bar(world_data.index, world_data['Population'] / 1e9, color='skyblue')
plt.xlabel("Year")
plt.ylabel("Population (Billions)")
plt.title("World Population Distribution (1960â€“2024) - Bar Chart")
plt.show()

# ðŸ“Š B. Histogram: Distribution of Population Values

plt.figure(figsize=(10, 6))
plt.hist(world_data['Population'] / 1e9, bins=10, color='orange', edgecolor="black")
plt.xlabel("Population (Billions)")
plt.ylabel("Number of Years")
plt.title("Histogram of World Population (1960â€“2024)")
plt.show()
